// Basis
//------------------------------

html
  opacity 0
  transition opacity 1s ease-in-out
  &.wf-active
    opacity 1

body
  background-color black
  color text-black
  &.preFixedHeader
  &.fixedHeader
    margin-top 40px
  +media(largeMin)
    &.preFixedHeader
      margin-top 50px

// Masonry
//------------------------------

.cmn-MansorySizer
.cmn-Masonry_Block
  width 100vw
  background-color white
  border-bottom 2px solid black
  +media(smallMin)
    width 50%
  +media(mediumMin)
    width 33.3%
  +media(largeMin)
    width 25vw
  +media(llargeMin)
    width 20vw

.cmn-Post
  font-size 1.3rem
  line-height 1.9
  .cmn-Post_Link
    display block
    padding 20px
  +media(smallMin)
    border-left 2px solid black
    &:nth-of-type(2n+1)
      border-left none
  +media(mediumMin)
    font-size 1.5rem
    &:nth-of-type(2n+1)
      border-left 2px solid black
    &:nth-of-type(3n+1)
      border-left none
  +media(largeMin)
    &:nth-of-type(3n+1)
      border-left 2px solid black
    &:nth-of-type(4n+1)
      border-left none
    .cmn-Post_Link
      transition all .3s ease
      &:hover
        background-color #efefef
  +media(llargeMin)
    &:nth-of-type(4n+1)
      border-left 2px solid black
    &:nth-of-type(5n+1)
      border-left none

.cmn-Post-note
  .cmn-Post_Heading
    display none

.cmn-Post-scrap
  .cmn-Post_Heading
    display none
  blockquote
    margin 0
    p
      font-style italic
      font-size 2.1rem
      line-height 1.1
      &::before
      &::after
        content "\000022"
        font-size 1.363636364em
        vertical-align middle
        color text-gray
      &::before
        margin-right 0.3em
      &::after
        margin-left 0.3em
    cite
      display block
      text-align right
      font-style normal
      font-size 1.2rem
      font-family hutogo
      &::before
        content "â€•"
  +media(mediumMin)
    blockquote
      p
        font-size 2.3rem
        line-height 1.3

.cmn-Post_Heading
  margin-bottom 10px
  padding-bottom 10px
  border-bottom 1px solid text-gray
  font-family hutogo
  font-weight 400
  font-size 1.7rem
  line-height 1.5
  text-align center
  +media(mediumMin)
    margin-bottom 14px
    padding-bottom 9px
    font-size 1.9rem

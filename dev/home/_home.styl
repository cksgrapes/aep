// Logo
//------------------------------
.home-Logo
  font-family mincho
  font-size 7rem
  font-weight normal

.home-LogoBlock
  min-height 70.566727605vw
  display flex
  justify-content center
  align-items center
  +media(smallMin)
    min-height 35.071707953vw
  +media(mediumMin)
    min-height 23.391215526vw
  +media(largeMin)
    width 50vw
    min-height 35.869565217vw
  +media(llargeMin)
    width 40vw
    min-height 28.084415584vw

.home-AboutBlock
  overflow hidden
  min-height 0
  height 70.566727605vw
  text-shadow 0 0 7px rgba(0,0,0,.7)
  color white
  &::before
  &::after
    display block
    content ""
    width 100%
    height 100%
    position absolute
    top 0
    left 0
  &::before
    background-image url('/assets/images/home/pic_home-about.jpg')
    background-size cover
    background-position left bottom
    z-index 1
    transform scale(1.2)
    transition -webkit-filter .5s ease-out
    transition filter .5s ease-out
    filter blur(8px) contrast(150%) grayscale(100%)
  &::after
    background-color rgba(10,10,10,.4)
    z-index 2
  .cmn-Masonry_Link
    position relative
    display block
    display flex
    justify-content center
    align-items center
    text-align center
    flex-direction column
    width 100%
    height 100%
    z-index 3
    padding 10px
    p:nth-child(1)
      position relative
      margin-bottom 16px
      font-family mincho
      font-size 2.8rem
    p:nth-child(2)
      position relative
      font-family hutogo
      font-size 1.3rem
  +media(smallMin)
    height 35.071707953vw
    .cmn-Masonry_Link
      p:nth-child(1)
        font-size 2.5rem
      p:nth-child(2)
        font-size 1.2rem
  +media(mediumMin)
    width 66.6vw
    height 23.391215526vw
    border-left 2px solid black
    .cmn-Masonry_Link
      p:nth-child(1)
        font-size 2.9rem
      p:nth-child(2)
        font-size 1.3rem
    &:hover
      &::before
        filter blur(8px) contrast(150%) grayscale(0%)
  +media(largeMin)
    width 50vw
    height 35.869565217vw
    .cmn-Masonry_Link
      p:nth-child(1)
        font-size 3rem
      p:nth-child(2)
        font-size 1.4rem
  +media(llargeMin)
    width 60vw
    height 28.084415584vw
    .cmn-Masonry_Link
      p:nth-child(1)
        font-size 3.4rem
